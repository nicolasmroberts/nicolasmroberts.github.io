   <style>
        .parallax {
            /* The image used */
            background-image: url('img/{{ current_page.background_image }}');

            /* Set a specific height */
            /* height: 400px; */

            /* Create the parallax scrolling effect */
            background-attachment: fixed;
            background-position: center;
            background-repeat: no-repeat;
            background-size: cover;

        }

        @media only screen and (max-width: 600px) {
            .parallax{
                background-repeat: repeat-y;
                background-position: top;
                background-size: auto 60%;
                width: 100%;

            }
        }

   </style>

<style>
  .gradient-block {
    width: 100%;
    height: 100%;
    /* Gradient goes from solid black to transparent black */
    background: linear-gradient(to bottom, rgba(0, 0, 0, 0.75), rgba(0, 0, 0, 0.5), rgba(0,0,0,0));
  }


@media only screen and (max-width: 700px) {
            .gradient-block {
                height: 300px;
                

            }
        }
</style>


    <body>
           <main>

        <div class="parallax">
            <!-- {% block parallax_header%}{% endblock %} -->
           
            <div class ="gradient-block">
           
            <h1 class="topMargin"><em>Structural Geology @ Hamilton College</em></h1>
            <nav><ul>
            	{% for p in PAGES %}
                	<li><a {% if p.name == current_page.name %}class ="active" {% endif %}
                	{% if p.name != current_page.name %}class ="inactive"{% endif %} href = "{{ p.name }}.html">{{p.title}}</a></li>{% endfor %}
        	   </nav>
            </div>


        <div class="tabcontent">
            {% block page_content %}{% endblock %}
        </div>


        <div>
            <footer> Nick last updated this website on {{ today.strftime('%b %d, %Y') }} </footer>
        </div>

        </div>


    </main>


        <script src="js/vendor/modernizr-3.5.0.min.js"></script>
        <script src="https://code.jquery.com/jquery-3.2.1.min.js" integrity="sha256-hwg4gsxgFZhOsEEamdOYGBf13FyQuiTwlAQgxVSNgt4=" crossorigin="anonymous"></script>
        <script>window.jQuery || document.write('<script src="js/vendor/jquery-3.2.1.min.js"><\/script>')</script>
        <script src="js/plugins.js"></script>
        <script src="js/main.js"></script>

        <!-- Google Analytics: change UA-XXXXX-Y to be your site's ID. -->


    </body>
</html>
